Require := Builtins:Require.
ToStr   := Builtins:ToStr.
TypeOf  := Builtins:TypeOf.
Help    := Builtins:Help.
Exit    := Builtins:Exit.
Error   := Builtins:Error.

Car := [
  "
  @ = {Fst, Snd}

  Returns `Fst`.
  ".
  {Fst, _} := @, Fst.
].
Cdr := [
  "
  @ = {Fst, Snd}

  Returns `Snd`.
  ".
  {_, Snd} := @, Snd.
].

Cmp := [
  "
  @ = {Val1, Val2}

  Returns (1, 0, -1) if `Val1` is (greater than, equal to, less than)
  `Val2`, respectively.

  Used for sorting purposes.
  ".
  {Val1, Val2} := @.
  case Val1 = Val2 of
    yeah -> 0.
    nope ->
      case Val1 > Val2 of
        yeah -> 1.
        nope -> -1.
      end.
  end.
].

