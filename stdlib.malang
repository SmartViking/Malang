Factorial := [
  case @ of
    1 -> 1.
    N -> N * Factorial (N-1).
  end.
].

Factorial_Tail_Recursive := [
  Helper := [
    {N, Acc} := @.
    case N <= 1 of
      true  -> Acc.
      false -> Helper {N-1, N * Acc}.
    end.
  ].
  Helper {@, 1}.
].